<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!--第一排 home-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <com.ruffian.library.widget.RTextView
                android:id="@+id/tvHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10_5f"
                android:gravity="center"
                android:text="@string/home_tab_home"
                android:textColor="@color/cl272B33"
                android:textSize="@dimen/sp_23"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.ruffian.library.widget.RConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_15"
                app:border_color_normal="@color/clCCCCCC"
                app:border_width_normal="@dimen/dp_0_5f"
                app:corner_radius="@dimen/dp_17"
                app:layout_constraintBottom_toBottomOf="@+id/tvHome"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvHome">

                <ImageView
                    android:id="@+id/ivShare"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginStart="@dimen/dp_11"
                    android:src="@drawable/ic_app_logo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.ruffian.library.widget.RTextView
                    android:id="@+id/tvShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:gravity="center"
                    android:text="@string/home_share_page"
                    android:textColor="@color/cl2C2E33"
                    android:textSize="@dimen/sp_13"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ivShare"
                    app:layout_constraintTop_toTopOf="parent" />

            </com.ruffian.library.widget.RConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 我的状态-->
        <com.dubu.common.views.tv.UbuntuMediumTextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_19"
            android:gravity="center"
            android:lineHeight="@dimen/dp_18"
            android:text="@string/home_my_status"
            android:textColor="@color/cl2C2E33"
            android:textSize="@dimen/sp_18"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topTitle" />

        <ImageView
            android:id="@+id/ivStatus"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_5"
            android:src="@drawable/ic_sos"
            app:layout_constraintBottom_toBottomOf="@+id/tvStatus"
            app:layout_constraintStart_toEndOf="@+id/tvStatus"
            app:layout_constraintTop_toTopOf="@+id/tvStatus" />

        <!-- 上下线-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clMyStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvStatus">

            <com.ruffian.library.widget.RConstraintLayout
                android:id="@+id/clUp"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_66"
                android:layout_marginEnd="@dimen/dp_6"
                app:background_normal="@color/white"
                app:border_color_normal="@color/cl42454D"
                app:border_width_normal="@dimen/dp_1"
                app:corner_radius="@dimen/dp_10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/clDown"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.ruffian.library.widget.RFrameLayout
                    android:id="@+id/flUp"
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:layout_marginTop="@dimen/dp_12"
                    app:border_color_normal="@color/cl3CD504"
                    app:border_width_normal="@dimen/dp_7"
                    app:corner_radius="@dimen/dp_10"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <com.ruffian.library.widget.RTextView
                    android:id="@+id/tvUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center"
                    android:text="@string/home_online"
                    android:textColor="@color/cl272B33"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/flUp" />

                <ImageView
                    android:id="@+id/ivUp"
                    android:layout_width="@dimen/dp_17"
                    android:layout_height="@dimen/dp_17"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_6"
                    android:layout_marginBottom="@dimen/dp_6"
                    android:src="@drawable/ic_statu_up"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </com.ruffian.library.widget.RConstraintLayout>


            <!--下线-->
            <com.ruffian.library.widget.RConstraintLayout
                android:id="@+id/clDown"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_66"
                android:layout_marginStart="@dimen/dp_6"
                app:background_normal="@color/white"
                app:border_color_normal="@color/clFFCB46"
                app:border_width_normal="@dimen/dp_1"
                app:corner_radius="@dimen/dp_10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/clUp"
                app:layout_constraintTop_toTopOf="parent">


                <com.ruffian.library.widget.RFrameLayout
                    android:id="@+id/flDown"
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:layout_marginTop="@dimen/dp_12"
                    app:border_color_normal="@color/clC9CBD1"
                    app:border_width_normal="@dimen/dp_7"
                    app:corner_radius="@dimen/dp_10"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <com.ruffian.library.widget.RTextView
                    android:id="@+id/tvDown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center"
                    android:text="@string/home_offline"
                    android:textColor="@color/cl272B33"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/flDown" />

                <ImageView
                    android:id="@+id/ivDown"
                    android:layout_width="@dimen/dp_17"
                    android:layout_height="@dimen/dp_17"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_6"
                    android:layout_marginBottom="@dimen/dp_6"
                    android:src="@drawable/ic_statu_down"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />


            </com.ruffian.library.widget.RConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--我的等级-->
        <com.dubu.common.views.tv.UbuntuMediumTextView
            android:id="@+id/tvRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_27"
            android:gravity="center"
            android:lineHeight="@dimen/dp_18"
            android:text="@string/home_my_lv"
            android:textColor="@color/cl2C2E33"
            android:textSize="@dimen/sp_18"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clMyStatus" />

        <com.dubu.common.views.tv.UbuntuBoldTextView
            android:id="@+id/tvRatingLv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:gravity="center"
            android:lineHeight="@dimen/dp_18"
            android:text="@string/lv_1"
            android:textColor="@color/clFF6E25"
            android:textSize="@dimen/sp_22"
            app:layout_constraintBottom_toBottomOf="@+id/tvRating"
            app:layout_constraintStart_toEndOf="@+id/tvRating"
            app:layout_constraintTop_toTopOf="@+id/tvRating" />

        <ImageView
            android:id="@+id/ivtvRatingLv"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_8"
            android:src="@drawable/ic_sos"
            app:layout_constraintBottom_toBottomOf="@+id/tvRatingLv"
            app:layout_constraintStart_toEndOf="@+id/tvRatingLv"
            app:layout_constraintTop_toTopOf="@+id/tvRatingLv" />

        <com.ruffian.library.widget.RTextView
            android:id="@+id/tvChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_15"
            android:gravity="center"
            android:text="@string/home_exchange_rate"
            android:textColor="@color/cl2C2E33"
            android:textSize="@dimen/sp_12"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tvRating"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvRating" />

        <!--等级进度条-->
        <com.ruffian.library.widget.RConstraintLayout
            android:id="@+id/clProgress"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_110"
            android:layout_marginHorizontal="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            app:background_normal="@color/white"
            app:corner_radius="@dimen/dp_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvRating">

            <ProgressBar
                android:id="@+id/pb1"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:max="100"
                android:progress="38"
                android:progressDrawable="@drawable/progress_drawable_vip"
                android:thumb="@drawable/video_seek_thumb"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--0%-->
            <com.dubu.common.views.tv.UbuntuRegularTextView
                android:id="@+id/tvP5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_19"
                android:gravity="center"
                android:lineHeight="@dimen/dp_13"
                android:text="0%"
                android:textColor="@color/cl6E7380"
                android:textSize="@dimen/sp_13"
                app:layout_constraintStart_toStartOf="@id/pb1"
                app:layout_constraintTop_toBottomOf="@+id/pb1" />


            <!-- A -->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.92" />

            <com.dubu.common.views.tv.UbuntuMediumTextView
                android:id="@+id/tvQ1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_19"
                android:gravity="center"
                android:lineHeight="@dimen/dp_13"
                android:text="@string/lv_1_q"
                android:textColor="@color/cl2C2E33"
                android:textSize="@dimen/sp_13"
                app:layout_constraintBottom_toTopOf="@+id/pb1"
                app:layout_constraintEnd_toEndOf="@+id/guidelineA"
                app:layout_constraintStart_toStartOf="@+id/guidelineA" />

            <com.ruffian.library.widget.RConstraintLayout
                android:id="@+id/clLvA"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                app:background_normal="@color/clF0F1F2"
                app:corner_radius="@dimen/dp_20"
                app:layout_constraintBottom_toBottomOf="@+id/pb1"
                app:layout_constraintEnd_toEndOf="@+id/guidelineA"
                app:layout_constraintStart_toStartOf="@+id/guidelineA"
                app:layout_constraintTop_toTopOf="@+id/pb1">

                <com.dubu.common.views.tv.UbuntuBoldTextView
                    android:id="@+id/tvLvA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/lv_1"
                    android:textColor="@color/clB5B7BA"
                    android:textSize="@dimen/sp_15"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </com.ruffian.library.widget.RConstraintLayout>

            <com.dubu.common.views.tv.UbuntuRegularTextView
                android:id="@+id/tvP1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_19"
                android:gravity="center"
                android:lineHeight="@dimen/dp_13"
                android:text="@string/lv_1_p"
                android:textColor="@color/cl6E7380"
                android:textSize="@dimen/sp_13"
                app:layout_constraintEnd_toEndOf="@+id/guidelineA"
                app:layout_constraintStart_toStartOf="@+id/guidelineA"
                app:layout_constraintTop_toBottomOf="@+id/pb1" />


            <!-- B -->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.77" />

            <com.dubu.common.views.tv.UbuntuMediumTextView
                android:id="@+id/tvQ2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_19"
                android:gravity="center"
                android:lineHeight="@dimen/dp_13"
                android:text="@string/lv_2_q"
                android:textColor="@color/cl2C2E33"
                android:textSize="@dimen/sp_13"
                app:layout_constraintBottom_toTopOf="@+id/pb1"
                app:layout_constraintEnd_toEndOf="@+id/guidelineB"
                app:layout_constraintStart_toStartOf="@+id/guidelineB" />

            <com.ruffian.library.widget.RConstraintLayout
                android:id="@+id/clLvB"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                app:background_normal="@color/clF0F1F2"
                app:corner_radius="@dimen/dp_20"
                app:layout_constraintBottom_toBottomOf="@+id/pb1"
                app:layout_constraintEnd_toEndOf="@+id/guidelineB"
                app:layout_constraintStart_toStartOf="@+id/guidelineB"
                app:layout_constraintTop_toTopOf="@+id/pb1">

                <com.dubu.common.views.tv.UbuntuBoldTextView
                    android:id="@+id/tvLvB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/lv_2"
                    android:textColor="@color/clB5B7BA"
                    android:textSize="@dimen/sp_15"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </com.ruffian.library.widget.RConstraintLayout>

            <com.dubu.common.views.tv.UbuntuRegularTextView
                android:id="@+id/tvP2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_19"
                android:gravity="center"
                android:lineHeight="@dimen/dp_13"
                android:text="@string/lv_2_p"
                android:textColor="@color/cl6E7380"
                android:textSize="@dimen/sp_13"
                app:layout_constraintEnd_toEndOf="@+id/guidelineB"
                app:layout_constraintStart_toStartOf="@+id/guidelineB"
                app:layout_constraintTop_toBottomOf="@+id/pb1" />


            <!-- C -->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.60" />

            <com.dubu.common.views.tv.UbuntuMediumTextView
                android:id="@+id/tvQ3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_19"
                android:gravity="center"
                android:lineHeight="@dimen/dp_13"
                android:text="@string/lv_3_q"
                android:textColor="@color/cl2C2E33"
                android:textSize="@dimen/sp_13"
                app:layout_constraintBottom_toTopOf="@+id/pb1"
                app:layout_constraintEnd_toEndOf="@+id/guidelineC"
                app:layout_constraintStart_toStartOf="@+id/guidelineC" />

            <com.ruffian.library.widget.RConstraintLayout
                android:id="@+id/clLvC"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                app:background_normal="@color/clF0F1F2"
                app:corner_radius="@dimen/dp_20"
                app:layout_constraintBottom_toBottomOf="@+id/pb1"
                app:layout_constraintEnd_toEndOf="@+id/guidelineC"
                app:layout_constraintStart_toStartOf="@+id/guidelineC"
                app:layout_constraintTop_toTopOf="@+id/pb1">

                <com.dubu.common.views.tv.UbuntuBoldTextView
                    android:id="@+id/tvLvC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/lv_3"
                    android:textColor="@color/clB5B7BA"
                    android:textSize="@dimen/sp_15"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </com.ruffian.library.widget.RConstraintLayout>


            <com.dubu.common.views.tv.UbuntuRegularTextView
                android:id="@+id/tvP3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_19"
                android:gravity="center"
                android:lineHeight="@dimen/dp_13"
                android:text="@string/lv_3_p"
                android:textColor="@color/cl6E7380"
                android:textSize="@dimen/sp_13"
                app:layout_constraintEnd_toEndOf="@+id/guidelineC"
                app:layout_constraintStart_toStartOf="@+id/guidelineC"
                app:layout_constraintTop_toBottomOf="@+id/pb1" />

            <!-- D -->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.40" />

            <com.dubu.common.views.tv.UbuntuMediumTextView
                android:id="@+id/tvQ4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_19"
                android:gravity="center"
                android:lineHeight="@dimen/dp_13"
                android:text="@string/lv_4_q"
                android:textColor="@color/cl2C2E33"
                android:textSize="@dimen/sp_13"
                app:layout_constraintBottom_toTopOf="@+id/pb1"
                app:layout_constraintEnd_toEndOf="@+id/guidelineD"
                app:layout_constraintStart_toStartOf="@+id/guidelineD" />

            <com.ruffian.library.widget.RConstraintLayout
                android:id="@+id/clLvD"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                app:background_normal="@color/clF0F1F2"
                app:corner_radius="@dimen/dp_20"
                app:layout_constraintBottom_toBottomOf="@+id/pb1"
                app:layout_constraintEnd_toEndOf="@+id/guidelineD"
                app:layout_constraintStart_toStartOf="@+id/guidelineD"
                app:layout_constraintTop_toTopOf="@+id/pb1">

                <com.dubu.common.views.tv.UbuntuBoldTextView
                    android:id="@+id/tvLvD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/lv_4"
                    android:textColor="@color/clB5B7BA"
                    android:textSize="@dimen/sp_15"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </com.ruffian.library.widget.RConstraintLayout>

            <com.dubu.common.views.tv.UbuntuRegularTextView
                android:id="@+id/tvP4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_19"
                android:gravity="center"
                android:lineHeight="@dimen/dp_13"
                android:text="@string/lv_4_p"
                android:textColor="@color/cl6E7380"
                android:textSize="@dimen/sp_13"
                app:layout_constraintEnd_toEndOf="@+id/guidelineD"
                app:layout_constraintStart_toStartOf="@+id/guidelineD"
                app:layout_constraintTop_toBottomOf="@+id/pb1" />

        </com.ruffian.library.widget.RConstraintLayout>


        <!-- 我的状态-->
        <com.dubu.common.views.tv.UbuntuMediumTextView
            android:id="@+id/tvNewUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_28"
            android:gravity="center"
            android:lineHeight="@dimen/dp_18"
            android:text="@string/home_user_recommend"
            android:textColor="@color/cl2C2E33"
            android:textSize="@dimen/sp_18"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clProgress" />

        <ImageView
            android:id="@+id/ivNewUser"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_5"
            android:src="@drawable/ic_sos"
            app:layout_constraintBottom_toBottomOf="@+id/tvNewUser"
            app:layout_constraintStart_toEndOf="@+id/tvNewUser"
            app:layout_constraintTop_toTopOf="@+id/tvNewUser" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_9"
            android:layout_marginTop="@dimen/dp_16"
            android:minHeight="@dimen/dp_120"
            android:scrollbars="none"
            app:layout_constraintEnd_toEndOf="parent"
