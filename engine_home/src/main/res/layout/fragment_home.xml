<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <com.hikennyc.view.MultiStateAiView
        android:id="@+id/multiStateView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/clF3F4F5"
        app:msv_emptyView="@layout/layout_default_empty"
        app:msv_errorView="@layout/layout_default_error"
        app:msv_loadingView="@layout/layout_default_loading_for_main"
        app:msv_viewState="content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/vStatus"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5f"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:src="@drawable/ic_home_bg"
                app:layout_constraintDimensionRatio="h,375:375"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivAppName"
                android:layout_width="@dimen/dp_105"
                android:layout_height="@dimen/dp_0"
                android:layout_marginStart="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_15"
                android:src="@drawable/ic_app_name"
                app:layout_constraintDimensionRatio="h,105:24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vStatus" />

            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_marginEnd="@dimen/dp_18"
                android:src="@drawable/ic_home_vip"
                app:layout_constraintBottom_toBottomOf="@+id/ivAppName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ivAppName" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_marginTop="@dimen/dp_15"
                android:overScrollMode="never"
                android:scrollbars="none"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivAppName">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <com.ruffian.library.widget.RConstraintLayout
                        android:id="@+id/clBanner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_18"
                        android:layout_marginTop="@dimen/dp_10"
                        app:background_normal="@color/white"
                        app:corner_radius="@dimen/dp_15"
                        app:layout_constraintTop_toTopOf="parent">


                        <!--上面的 轮播-->
                        <com.ruffian.library.widget.RConstraintLayout
                            android:id="@+id/clTopBanner"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_0"
                            app:background_normal="@color/clF5F6F7"
                            app:border_color_normal="@color/white"
                            app:border_width_normal="@dimen/dp_1"
                            app:corner_radius_top_left="@dimen/dp_15"
                            app:corner_radius_top_right="@dimen/dp_15"
                            app:layout_constraintDimensionRatio="h,339:263">

                            <com.youth.banner.Banner
                                android:id="@+id/bannerTopVideo"
                                android:layout_width="@dimen/dp_170"
                                android:layout_height="0dp"
                                app:banner_indicator_height="@dimen/dp_5"
                                app:banner_indicator_normal_color="@color/clDBDBDB"
                                app:banner_indicator_normal_width="@dimen/dp_5"
                                app:banner_indicator_radius="@dimen/dp_3"
                                app:banner_indicator_selected_color="@color/cl333333"
                                app:banner_indicator_selected_width="@dimen/dp_5"
                                app:banner_indicator_space="@dimen/dp_5"
                                app:layout_constraintDimensionRatio="h,170:253"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </com.ruffian.library.widget.RConstraintLayout>

                        <com.ruffian.library.widget.RConstraintLayout
                            android:id="@+id/rootPhoto"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_52"
                            android:layout_marginHorizontal="@dimen/dp_26"
                            android:layout_marginVertical="@dimen/dp_13"
                            app:background_normal="@array/bt_bg_1"
                            app:corner_radius="@dimen/dp_26"
                            app:gradient_orientation="TR_BL"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/clTopBanner">

                            <com.dubu.common.views.cview.DrawableTextView
                                android:id="@+id/tvH1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="@dimen/dp_5"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:lineSpacingExtra="0dp"
                                android:maxLines="1"
                                android:text="@string/can_cash"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_17"
                                android:textStyle="bold"
                                app:drawable="@drawable/ic_home_right"
                                app:drawableHeight="@dimen/dp_17"
                                app:drawablePosition="3"
                                app:drawableWidth="@dimen/dp_16"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </com.ruffian.library.widget.RConstraintLayout>


                    </com.ruffian.library.widget.RConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.hikennyc.view.MultiStateAiView>
</layout>
