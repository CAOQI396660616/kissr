<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/clF3F4F5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/clTopRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <!--顶部栏-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clTop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                app:layout_constraintTop_toBottomOf="@id/vStatus">

                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="@dimen/dp_39"
                    android:layout_height="match_parent"
                    android:paddingStart="@dimen/dp_16"
                    android:paddingEnd="@dimen/dp_8"
                    android:src="@drawable/ic_back_a"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingHorizontal="@dimen/dp_50"
                    android:text="@string/call_price"
                    android:textColor="@color/cl1A1A1A"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/tvTip1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_25"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_14"
                android:text="@string/set_call_price_content"
                android:textColor="@color/cl2C2E33"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.ruffian.library.widget.RLinearLayout
                android:id="@+id/clRoot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_19"
                android:orientation="vertical"
                app:background_normal="@color/white"
                app:corner_radius="@dimen/dp_10">

                <!--1-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clRoot1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_56"
                    android:layout_marginHorizontal="@dimen/dp_16"
                    android:orientation="vertical"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <EditText
                        android:id="@+id/etMsg"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:digits="0123456789"
                        android:inputType="number"
                        android:maxLength="10"
                        android:paddingEnd="@dimen/dp_16"
                        android:text="10"
                        android:textColor="@color/cl2C2E33"
                        android:textColorHint="@color/cl848A99"
                        android:textSize="@dimen/sp_17"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/tvDD"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/tvDD"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/restore_default_price"
                        android:gravity="center"
                        android:textColor="#FF6077B2"
                        android:textSize="@dimen/sp_14"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </com.ruffian.library.widget.RLinearLayout>


            <TextView
                android:id="@+id/tvTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:text="@string/default_price_content"
                android:textColor="@color/cl848A99"
                android:textSize="@dimen/sp_12" />


        </LinearLayout>


        <com.ruffian.library.widget.RTextView
            android:id="@+id/tvNext"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_51"
            android:layout_marginHorizontal="@dimen/dp_33"
            android:layout_marginBottom="@dimen/dp_20"
            android:gravity="center"
            android:text="@string/save"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            app:background_normal="@color/cl2C2E33"
            app:corner_radius="@dimen/dp_26"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>