<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>


    <LinearLayout
        android:id="@+id/clTopRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/clF3F4F5"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <!--顶部栏-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clTop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            app:layout_constraintTop_toBottomOf="@id/vStatus">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="@dimen/dp_39"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_8"
                android:src="@drawable/ic_back_a"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingHorizontal="@dimen/dp_50"
                android:text="@string/bind_account_t"
                android:textColor="@color/cl1A1A1A"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_21"
            android:gravity="start"
            android:text="@string/cash_account_tip"
            android:textColor="@color/cl848A99"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_26"
            android:text="@string/cardholder_name"
            android:textColor="@color/cl2C2E33"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />


        <com.ruffian.library.widget.RLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_53"
            android:layout_marginHorizontal="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center_vertical"
            android:layoutDirection="locale"
            android:orientation="horizontal"
            app:background_normal="@color/white"
            app:corner_radius="@dimen/dp_10">

            <EditText
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="start|center_vertical"
                android:hint="@string/cardholder_name"
                android:inputType="textAutoComplete"
                android:maxLength="20"
                android:paddingHorizontal="@dimen/dp_20"
                android:textColor="@color/cl2C2E33"
                android:textColorHint="@color/cl848A99"
                android:textSize="@dimen/sp_17" />

        </com.ruffian.library.widget.RLinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_26"
            android:text="@string/card_num"
            android:textColor="@color/cl2C2E33"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />


        <com.ruffian.library.widget.RLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_53"
            android:layout_marginHorizontal="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center_vertical"
            android:layoutDirection="locale"
            android:orientation="horizontal"
            app:background_normal="@color/white"
            app:corner_radius="@dimen/dp_10">

            <EditText
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="start|center_vertical"
                android:hint="@string/cash_account_input_pp"
                android:inputType="textAutoComplete"
                android:maxLength="20"
                android:paddingHorizontal="@dimen/dp_20"
                android:textColor="@color/cl2C2E33"
                android:textColorHint="@color/cl848A99"
                android:textSize="@dimen/sp_17" />

        </com.ruffian.library.widget.RLinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_26"
            android:text="@string/account_user_name"
            android:textColor="@color/cl2C2E33"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />


        <com.ruffian.library.widget.RLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_53"
            android:layout_marginHorizontal="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center_vertical"
            android:layoutDirection="locale"
            android:orientation="horizontal"
            app:background_normal="@color/white"
            app:corner_radius="@dimen/dp_10">

            <EditText
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="start|center_vertical"
                android:hint="@string/card_num"
                android:inputType="textAutoComplete"
                android:maxLength="20"
                android:paddingHorizontal="@dimen/dp_20"
                android:textColor="@color/cl2C2E33"
                android:textColorHint="@color/cl848A99"
                android:textSize="@dimen/sp_17" />

        </com.ruffian.library.widget.RLinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_26"
                    android:text="@string/card_expiration_date"
                    android:textColor="@color/cl2C2E33"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold" />


                <com.ruffian.library.widget.RLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_53"
                    android:layout_marginHorizontal="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_15"
                    android:gravity="center_vertical"
                    android:layoutDirection="locale"
                    android:orientation="horizontal"
                    app:background_normal="@color/white"
                    app:corner_radius="@dimen/dp_10">

                    <EditText
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="start|center_vertical"
                        android:hint="@string/card_date_m_y"
                        android:inputType="number"
                        android:digits="0123456789"
                        android:maxLength="4"
                        android:paddingStart="@dimen/dp_20"
                        android:paddingEnd="@dimen/dp_20"
                        android:textColor="@color/cl2C2E33"
                        android:textColorHint="@color/cl848A99"
                        android:textSize="@dimen/sp_17" />


                </com.ruffian.library.widget.RLinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_26"
                    android:text="@string/card_cvc"
                    android:textColor="@color/cl2C2E33"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold" />


                <com.ruffian.library.widget.RLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_53"
                    android:layout_marginHorizontal="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_15"
                    android:gravity="center_vertical"
                    android:layoutDirection="locale"
                    android:orientation="horizontal"
                    app:background_normal="@color/white"
                    app:corner_radius="@dimen/dp_10">

                    <EditText
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="start|center_vertical"
                        android:hint="@string/card_cvc_tip"
                        android:inputType="textAutoComplete"
                        android:maxLength="20"
                        android:paddingStart="@dimen/dp_20"
                        android:paddingEnd="@dimen/dp_10"
                        android:textColor="@color/cl2C2E33"
                        android:textColorHint="@color/cl848A99"
                        android:textSize="@dimen/sp_17" />

                    <ImageView
                        android:layout_width="@dimen/dp_29"
                        android:layout_height="@dimen/dp_22"
                        android:layout_marginEnd="@dimen/dp_12"
                        android:src="@drawable/ic_card_c" />


                </com.ruffian.library.widget.RLinearLayout>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</layout>