<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <com.hikennyc.view.MultiStateAiView
        android:id="@+id/multiStateView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/clF3F4F5"
        app:msv_emptyView="@layout/layout_default_empty"
        app:msv_errorView="@layout/layout_default_error"
        app:msv_loadingView="@layout/layout_default_loading"
        app:msv_viewState="loading">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/clTopRoot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="gone">

                <!--顶部栏-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clTop"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    app:layout_constraintTop_toBottomOf="@id/vStatus">

                    <ImageView
                        android:id="@+id/ivBackAn"
                        android:layout_width="@dimen/dp_39"
                        android:layout_height="match_parent"
                        android:paddingStart="@dimen/dp_16"
                        android:paddingEnd="@dimen/dp_8"
                        android:src="@drawable/ic_back_a"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:paddingHorizontal="@dimen/dp_50"
                        android:text="@string/setting_join_guild"
                        android:textColor="@color/cl1A1A1A"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvTitleEnd"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:paddingHorizontal="@dimen/dp_16"
                        android:text="@string/joined_union_history"
                        android:textColor="@color/cl2C2E33"
                        android:textSize="@dimen/sp_15"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>


                <com.ruffian.library.widget.RLinearLayout
                    android:id="@+id/llEdit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:layout_marginHorizontal="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_29"
                    android:gravity="center_vertical"
                    android:layoutDirection="locale"
                    android:orientation="horizontal"
                    app:background_normal="@color/white"
                    app:corner_radius="@dimen/dp_25"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvTitle">

                    <ImageView
                        android:layout_width="@dimen/dp_19"
                        android:layout_height="@dimen/dp_19"
                        android:layout_marginStart="@dimen/dp_15"
                        android:src="@drawable/ic_serach"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <EditText
                        android:id="@+id/etDes"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="start|center_vertical"
                        android:hint="@string/input_guild_name"
                        android:inputType="textAutoComplete"
                        android:maxLength="50"
                        android:paddingStart="@dimen/dp_6"
                        android:textColor="@color/cl2C2E33"
                        android:textColorHint="#ff9AA1B3"
                        android:textSize="@dimen/sp_15" />

                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="@dimen/dp_16"
                        android:background="@color/clD8D8D8" />

                    <TextView
                        android:id="@+id/tvDesSum"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:paddingHorizontal="@dimen/dp_18"
                        android:text="@string/search_action"
                        android:textColor="@color/cl2C2E33"
                        android:textSize="@dimen/sp_15"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </com.ruffian.library.widget.RLinearLayout>

                <com.scwang.smart.refresh.layout.SmartRefreshLayout
                    android:id="@+id/smartRefresh"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvTip">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_12"
                        android:scrollbars="none" />
                </com.scwang.smart.refresh.layout.SmartRefreshLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/clTopRootAn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible">

                <!--顶部栏-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    app:layout_constraintTop_toBottomOf="@id/vStatus">

                    <ImageView
                        android:id="@+id/ivBackAnAn"
                        android:layout_width="@dimen/dp_39"
                        android:layout_height="match_parent"
                        android:paddingStart="@dimen/dp_16"
                        android:paddingEnd="@dimen/dp_8"
                        android:src="@drawable/ic_back_a"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/tvTitleAn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:paddingHorizontal="@dimen/dp_50"
                        android:text="@string/joined_union"
                        android:textColor="@color/cl1A1A1A"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />



                    <TextView
                        android:id="@+id/tvTitleEndAN"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:paddingHorizontal="@dimen/dp_16"
                        android:text="@string/joined_union_history"
                        android:textColor="@color/cl2C2E33"
                        android:textSize="@dimen/sp_15"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <com.ruffian.library.widget.RConstraintLayout
                    android:id="@+id/rootTeam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_16"
                    android:layout_marginVertical="@dimen/dp_17"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:background_normal="@color/white"
                    app:corner_radius="@dimen/dp_10"
                    tools:ignore="MissingDefaultResource">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_avatar"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginVertical="@dimen/dp_15"
                        android:layout_marginStart="@dimen/dp_16"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_default_avatar"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:shapeAppearance="@style/circleImageStyle" />


                    <TextView
                        android:id="@+id/tvTeamName"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_1"
                        android:ellipsize="end"
                        android:gravity="start|center_vertical"
                        android:maxLines="1"
                        android:paddingHorizontal="@dimen/dp_10"
                        android:text="@string/app_name"
                        android:textColor="@color/cl2C2E33"
                        android:textSize="@dimen/sp_15"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/tvNext"
                        app:layout_constraintStart_toEndOf="@+id/iv_avatar"
                        app:layout_constraintTop_toTopOf="@+id/iv_avatar"
                        tools:text="@string/text_long" />

                    <TextView
                        android:id="@+id/tvTeamDesc"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_1"
                        android:ellipsize="end"
                        android:gravity="start|center_vertical"
                        android:maxLines="1"
                        android:paddingHorizontal="@dimen/dp_10"
                        android:text="@string/app_name"
                        android:textColor="@color/cl848A99"
                        android:textSize="@dimen/sp_12"
                        app:layout_constraintEnd_toStartOf="@+id/tvNext"
                        app:layout_constraintStart_toStartOf="@+id/tvTeamName"
                        app:layout_constraintTop_toBottomOf="@+id/tvTeamName" />


                    <com.ruffian.library.widget.RTextView
                        android:id="@+id/tvNext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_16"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/dp_20"
                        android:paddingVertical="@dimen/dp_10"
                        android:text="@string/union_status_out"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_13"
                        android:textStyle="bold"
                        app:background_normal="@color/clFF4D6F"
                        app:corner_radius="@dimen/dp_26"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </com.ruffian.library.widget.RConstraintLayout>


            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.hikennyc.view.MultiStateAiView>

</layout>