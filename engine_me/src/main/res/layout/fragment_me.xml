<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/clF5F6F7">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutDirection="locale">

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:src="@drawable/ic_mine_bg"
                app:layout_constraintDimensionRatio="h,375:267"
                app:layout_constraintTop_toTopOf="parent" />

            <!--顶部用户头像区域-->
            <com.dubu.common.views.tv.UbuntuMediumTextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_14"
                android:clickable="false"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textColor="@color/cl2C2E33"
                android:textSize="@dimen/sp_25"
                app:layout_constraintEnd_toStartOf="@id/iv_arrow_1"
                app:layout_constraintStart_toEndOf="@id/iv_avatar"
                app:layout_constraintTop_toTopOf="@id/iv_avatar" />

            <ImageView
                android:id="@+id/iv_arrow_1"
                android:layout_width="@dimen/dp_17"
                android:layout_height="@dimen/dp_17"
                android:layout_marginEnd="@dimen/dp_22"
                android:src="@drawable/ic_edit"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@id/iv_avatar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/iv_avatar"
                tools:ignore="ContentDescription" />

            <View
                android:id="@+id/viewEdit"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                app:layout_constraintBottom_toBottomOf="@+id/iv_arrow_1"
                app:layout_constraintEnd_toEndOf="@+id/iv_arrow_1"
                app:layout_constraintStart_toStartOf="@+id/iv_arrow_1"
                app:layout_constraintTop_toTopOf="@+id/iv_arrow_1" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_avatar"
                android:layout_width="@dimen/dp_64"
                android:layout_height="@dimen/dp_64"
                android:layout_marginStart="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_80"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_default_avatar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearance="@style/circleImageStyle" />

            <com.ruffian.library.widget.RConstraintLayout
                android:id="@+id/clVipLogo"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_2"
                android:visibility="gone"
                app:background_normal="#FBE945"
                app:corner_radius="@dimen/dp_17"
                app:layout_constraintBottom_toBottomOf="@+id/iv_avatar"
                app:layout_constraintEnd_toEndOf="@+id/iv_avatar"
                app:layout_constraintStart_toStartOf="@+id/iv_avatar">


                <ImageView
                    android:layout_width="@dimen/dp_21"
                    android:layout_height="@dimen/dp_8"
                    android:src="@drawable/ic_app_logo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </com.ruffian.library.widget.RConstraintLayout>

            <View
                android:layout_marginEnd="@dimen/dp_15"
                android:id="@+id/v_profile"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@id/iv_avatar"
                app:layout_constraintEnd_toStartOf="@+id/viewEdit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/iv_avatar" />

            <com.ruffian.library.widget.RTextView
                android:id="@+id/tvSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_16"
                android:gravity="center"
                android:maxLines="1"
                android:minHeight="@dimen/dp_32"
                android:paddingHorizontal="@dimen/dp_18"
                android:paddingVertical="@dimen/dp_8"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"

                android:visibility="gone"
                app:border_color_normal="@color/color_white_alpha_60"
                app:border_width_normal="@dimen/dp_1"
                app:corner_radius="@dimen/dp_18"
                app:layout_constraintBottom_toBottomOf="@id/iv_avatar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/iv_avatar" />

            <com.dubu.common.views.cview.DrawableTextView
                android:id="@+id/tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:maxWidth="@dimen/dp_200"
                android:text="ID:549527007"
                android:textColor="#FF858C99"
                android:textSize="@dimen/sp_14"
                app:layout_constraintBottom_toBottomOf="@id/iv_avatar"
                app:layout_constraintStart_toEndOf="@id/iv_avatar"
                app:layout_constraintTop_toBottomOf="@id/tv_name" />



        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

</layout>