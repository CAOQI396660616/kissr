<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>


    <com.hikennyc.view.MultiStateAiView
        android:id="@+id/multiStateView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:msv_emptyView="@layout/layout_default_empty"
        app:msv_errorView="@layout/layout_default_error"
        app:msv_loadingView="@layout/layout_default_loading_for_main"
        app:msv_viewState="content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.appbar.AppBarLayout
                    android:id="@+id/appBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:translationZ="0dp"
                    app:elevation="0dp">

                    <com.google.android.material.appbar.CollapsingToolbarLayout
                        android:id="@+id/collapsingBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        app:layout_scrollFlags="scroll|exitUntilCollapsed">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerView"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_0"
                                android:scrollbars="none"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintDimensionRatio="h,375:270"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <com.dubu.common.views.chat.DrawableIndicator
                                android:id="@+id/magicIndicator1"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_50"
                                android:layout_marginBottom="@dimen/dp_35"
                                app:layout_constraintBottom_toBottomOf="@+id/recyclerView"
                                app:layout_constraintEnd_toEndOf="@+id/recyclerView"
                                app:layout_constraintStart_toStartOf="@+id/recyclerView" />

                            <View
                                android:id="@+id/vStatusHi"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_0_5f"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <!--顶部栏-->
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/clTop"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_44"
                                android:layout_marginTop="@dimen/dp_44"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/vStatusHi"
                                app:layout_constraintTop_toTopOf="parent">

                                <ImageView
                                    android:id="@+id/ivBack"
                                    android:layout_width="@dimen/dp_39"
                                    android:layout_height="match_parent"
                                    android:paddingStart="@dimen/dp_16"
                                    android:paddingEnd="@dimen/dp_8"
                                    android:src="@drawable/ic_back_b"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />


                                <ImageView
                                    android:id="@+id/ivEdit"
                                    android:layout_width="@dimen/dp_17"
                                    android:layout_height="@dimen/dp_17"
                                    android:layout_marginEnd="@dimen/dp_22"
                                    android:src="@drawable/ic_edit_a"
                                    android:visibility="visible"
                                    app:layout_constraintBottom_toBottomOf="@id/ivBack"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="@id/ivBack"
                                    tools:ignore="ContentDescription" />

                                <View
                                    android:id="@+id/viewEdit"
                                    android:layout_width="@dimen/dp_60"
                                    android:layout_height="@dimen/dp_60"
                                    app:layout_constraintBottom_toBottomOf="@+id/ivEdit"
                                    app:layout_constraintEnd_toEndOf="@+id/ivEdit"
                                    app:layout_constraintStart_toStartOf="@+id/ivEdit"
                                    app:layout_constraintTop_toTopOf="@+id/ivEdit" />


                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <com.ruffian.library.widget.RView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_25"
                                app:background_normal="@color/white"
                                app:corner_radius_top_left="@dimen/dp_15"
                                app:corner_radius_top_right="@dimen/dp_15"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />


                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <!--折叠起来的高度在于Toolbar的高度这里就是顶部右边 不变的 more按钮-->
                        <androidx.appcompat.widget.Toolbar
                            android:id="@+id/toolbar"
                            android:alpha="0.00"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:contentInsetStart="0dp"
                            app:layout_collapseMode="pin">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/clTopToolBar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:paddingTop="@dimen/dp_0"
                                android:visibility="visible">


                                <!--青少年模式之上的占位view 主要是 和 stateBar齐平高度-->
                                <View
                                    android:id="@+id/vSpaceTop"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_44"
                                    android:background="@color/transparent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />


                                <!--顶部栏 an-->
                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/clTopAn"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_44"
                                    app:layout_constraintTop_toBottomOf="@+id/vSpaceTop">

                                    <ImageView
                                        android:id="@+id/ivBackAn"
                                        android:layout_width="@dimen/dp_39"
                                        android:layout_height="match_parent"
                                        android:paddingStart="@dimen/dp_16"
                                        android:paddingEnd="@dimen/dp_8"
                                        android:src="@drawable/ic_back_a"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />


                                    <ImageView
                                        android:id="@+id/ivEditAn"
                                        android:layout_width="@dimen/dp_17"
                                        android:layout_height="@dimen/dp_17"
                                        android:layout_marginEnd="@dimen/dp_22"
                                        android:src="@drawable/ic_edit"
                                        android:visibility="visible"
                                        app:layout_constraintBottom_toBottomOf="@id/ivBackAn"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintTop_toTopOf="@id/ivBackAn"
                                        tools:ignore="ContentDescription" />

                                    <View
                                        android:id="@+id/viewEditAn"
                                        android:layout_width="@dimen/dp_60"
                                        android:layout_height="@dimen/dp_60"
                                        app:layout_constraintBottom_toBottomOf="@+id/ivEditAn"
                                        app:layout_constraintEnd_toEndOf="@+id/ivEditAn"
                                        app:layout_constraintStart_toStartOf="@+id/ivEditAn"
                                        app:layout_constraintTop_toTopOf="@+id/ivEditAn" />


                                </androidx.constraintlayout.widget.ConstraintLayout>


                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.appcompat.widget.Toolbar>


                    </com.google.android.material.appbar.CollapsingToolbarLayout>


                </com.google.android.material.appbar.AppBarLayout>


                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:overScrollMode="never"
                    android:scrollbars="none"
                    app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/rlRootArea"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">


                            <com.dubu.common.views.tv.UbuntuMediumTextView
                                android:id="@+id/tvUserName"
                                android:layout_width="@dimen/dp_0"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/dp_17"
                                android:layout_marginTop="@dimen/dp_1"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@string/app_name"
                                android:textColor="@color/cl2C2E33"
                                android:textSize="@dimen/sp_22"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:text="11211111" />


                            <ImageView
                                android:id="@+id/ivSex"
                                android:layout_width="@dimen/dp_13"
                                android:layout_height="@dimen/dp_13"
                                android:layout_marginTop="@dimen/dp_14"
                                android:src="@drawable/ic_woman"
                                app:layout_constraintStart_toStartOf="@+id/tvUserName"
                                app:layout_constraintTop_toBottomOf="@+id/tvUserName" />


                            <com.dubu.common.views.tv.UbuntuRegularTextView
                                android:id="@+id/tvAge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_4"
                                android:gravity="center"
                                android:lineHeight="@dimen/dp_14"
                                android:text="28"
                                android:textColor="@color/cl2C2E33"
                                android:textSize="@dimen/sp_14"
                                app:layout_constraintBottom_toBottomOf="@+id/ivSex"
                                app:layout_constraintStart_toEndOf="@+id/ivSex"
                                app:layout_constraintTop_toTopOf="@+id/ivSex" />


                            <View
                                android:id="@+id/viewH"
                                android:layout_width="@dimen/dp_1"
                                android:layout_height="@dimen/dp_12"
                                android:layout_marginStart="@dimen/dp_8"
                                android:background="#939599"
                                app:layout_constraintBottom_toBottomOf="@+id/tvAge"
                                app:layout_constraintStart_toEndOf="@+id/tvAge"
                                app:layout_constraintTop_toTopOf="@+id/tvAge" />


                            <ImageView
                                android:id="@+id/ivCountry"
                                android:layout_width="@dimen/dp_13"
                                android:layout_height="@dimen/dp_13"
                                android:layout_marginStart="@dimen/dp_8"
                                android:src="@drawable/ic_default_avatar"
                                app:layout_constraintBottom_toBottomOf="@+id/viewH"
                                app:layout_constraintStart_toEndOf="@+id/viewH"
                                app:layout_constraintTop_toTopOf="@+id/viewH" />

                            <com.dubu.common.views.tv.UbuntuRegularTextView
                                android:id="@+id/tvCountry"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_4"
                                android:gravity="center"
                                android:lineHeight="@dimen/dp_14"
                                android:text="US"
                                android:textColor="@color/cl2C2E33"
                                android:textSize="@dimen/sp_14"
                                app:layout_constraintBottom_toBottomOf="@+id/ivCountry"
                                app:layout_constraintStart_toEndOf="@+id/ivCountry"
                                app:layout_constraintTop_toTopOf="@+id/ivCountry" />


                            <!--简介-->
                            <com.dubu.common.views.tv.UbuntuRegularTextView
                                android:id="@+id/tvInfo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="@dimen/dp_17"
                                android:layout_marginTop="@dimen/dp_16"
                                android:gravity="start|center_vertical"
                                android:lineSpacingExtra="@dimen/dp_2"
                                android:text="@string/text_content"
                                android:textColor="@color/cl6E7380"
                                android:textSize="@dimen/sp_14"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/tvCountry" />

                            <com.dubu.common.views.cview.DrawableTextView
                                android:id="@+id/tvToggle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_14"
                                android:drawablePadding="@dimen/dp_5"
                                android:text="@string/more"
                                android:textColor="@color/cl848A99"
                                android:textSize="@dimen/sp_14"
                                app:drawable="@drawable/ic_tv_toggle_d"
                                app:drawableHeight="@dimen/dp_10"
                                app:drawablePosition="3"
                                app:drawableWidth="@dimen/dp_10"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/tvInfo" />

                            <!--收藏-->
                            <com.dubu.common.views.tv.UbuntuMediumTextView
                                android:id="@+id/tvCollection"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/dp_17"
                                android:layout_marginTop="@dimen/dp_16"
                                android:gravity="center"
                                android:text="@string/favorites"
                                android:textColor="@color/cl2C2E33"
                                android:textSize="@dimen/sp_18"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/tvToggle"
                                app:layout_goneMarginTop="@dimen/dp_16" />


                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <com.scwang.smart.refresh.layout.SmartRefreshLayout
                            android:id="@+id/smartRefresh"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_0"
                            android:layout_weight="1">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerViewBot"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scrollbars="none"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/tvCollection" />
                        </com.scwang.smart.refresh.layout.SmartRefreshLayout>


                    </LinearLayout>


                </androidx.core.widget.NestedScrollView>


            </androidx.coordinatorlayout.widget.CoordinatorLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.hikennyc.view.MultiStateAiView>


</layout>