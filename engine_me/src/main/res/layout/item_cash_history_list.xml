<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <com.ruffian.library.widget.RConstraintLayout
        android:id="@+id/rootTeam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:layout_marginVertical="@dimen/dp_6"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:background_normal="@color/white"
        app:corner_radius="@dimen/dp_10"
        tools:ignore="MissingDefaultResource">


        <TextView
            android:id="@+id/tvTeamName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_18"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxWidth="@dimen/dp_240"
            android:maxLines="1"
            android:paddingHorizontal="@dimen/dp_10"
            android:text="@string/app_name"
            android:textColor="@color/cl2C2E33"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/text_long" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginBottom="@dimen/dp_18"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxWidth="@dimen/dp_240"
            android:maxLines="1"
            android:paddingHorizontal="@dimen/dp_10"
            android:text="@string/app_name"
            android:textColor="#6E7380"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvTeamName"
            app:layout_constraintTop_toBottomOf="@+id/tvTeamName" />


        <TextView
            android:id="@+id/tvStates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginEnd="@dimen/dp_15"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxWidth="@dimen/dp_80"
            android:maxLines="1"
            android:paddingHorizontal="@dimen/dp_10"
            android:text="@string/app_name"
            android:textColor="#9AA1B3"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/text_long" />

        <com.dubu.common.views.tv.UbuntuMediumTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginBottom="@dimen/dp_18"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxWidth="@dimen/dp_240"
            android:maxLines="1"
            android:paddingHorizontal="@dimen/dp_10"
            android:text="@string/app_name"
            android:textColor="@color/cl2C2E33"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tvStates"
            app:layout_constraintTop_toBottomOf="@+id/tvStates" />


    </com.ruffian.library.widget.RConstraintLayout>


</LinearLayout>



