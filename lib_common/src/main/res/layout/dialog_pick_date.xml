<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_dialog_light"
    android:paddingBottom="@dimen/dp_10">

    <com.dubu.common.views.cview.DrawableTextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_21"
        android:layout_marginTop="@dimen/dp_25"
        android:drawablePadding="@dimen/dp_16"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:text="@string/select_date"
        android:textColor="@color/cl2C2E33"
        android:textSize="@dimen/sp_17"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.v.wheel.WheelView
        android:id="@+id/wv_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_215"
        android:lineSpacingMultiplier="2.4"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:textSize="@dimen/sp_18"
        app:canLoop="true"
        app:centerTextColor="@color/cl2C2E33"
        app:centerTextMidWeight="true"
        app:dividerVisible="false"
        app:layout_constraintBottom_toBottomOf="@id/wv_month"
        app:layout_constraintEnd_toStartOf="@id/wv_month"
        app:layout_constraintTop_toTopOf="@id/wv_month"
        app:subTextColor="@color/color999999"
        app:subTextGradient="true"
        app:subTextXOffset="25"
        app:visibleItemCount="9" />

    <com.v.wheel.WheelView
        android:id="@+id/wv_month"
        android:layout_width="@dimen/dp_90"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_215"
        android:layout_marginTop="@dimen/dp_10"
        android:lineSpacingMultiplier="2.4"
        android:textSize="@dimen/sp_18"
        app:canLoop="true"
        app:centerTextColor="@color/cl2C2E33"
        app:centerTextMidWeight="true"
        app:dividerVisible="false"
        app:layout_constraintBottom_toTopOf="@+id/tv_confirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:subTextColor="@color/color999999"
        app:subTextGradient="true"
        app:visibleItemCount="9" />

    <com.v.wheel.WheelView
        android:id="@+id/wv_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_215"
        android:lineSpacingMultiplier="2.4"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:textSize="@dimen/sp_18"
        app:canLoop="true"
        app:centerTextColor="@color/cl2C2E33"
        app:centerTextMidWeight="true"
        app:dividerVisible="false"
        app:layout_constraintBottom_toBottomOf="@id/wv_month"
        app:layout_constraintStart_toEndOf="@id/wv_month"
        app:layout_constraintTop_toTopOf="@id/wv_month"
        app:subTextColor="@color/color999999"
        app:subTextGradient="true"
        app:subTextXOffset="-25"
        app:visibleItemCount="9" />




    <ImageView
        android:id="@+id/tv_cancel"
        android:layout_width="@dimen/dp_42"
        android:layout_height="@dimen/dp_42"
        android:padding="@dimen/dp_7"
        android:src="@drawable/ic_close_dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.ruffian.library.widget.RTextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginHorizontal="@dimen/dp_33"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        app:background_normal="@color/cl2C2E33"
        app:corner_radius="@dimen/dp_25"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>






