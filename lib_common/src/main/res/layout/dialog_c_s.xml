<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_solid_r15_white"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <TextView
        android:id="@+id/dd_tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_19"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="#363638"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="NIUBILITY_" />


    <TextView
        android:id="@+id/dd_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_22"
        android:layout_marginTop="@dimen/dp_14"
        android:gravity="center"
        android:includeFontPadding="false"
        android:minHeight="@dimen/dp_40"
        android:textColor="#ff585C66"
        android:textSize="@dimen/sp_13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dd_tv_title"
        app:layout_goneMarginTop="@dimen/dp_28"
        tools:text="niubility_niubility_niubility_niubility_niubility_niubility_" />

    <TextView
        android:id="@+id/dd_btn_start"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_43"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_24"
        android:background="@drawable/bg_r_24_e9ebf0"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="#9AA1B3"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/space_middle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dd_tv_content" />

    <TextView
        android:id="@+id/dd_btn_end"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_43"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@drawable/bg_r_24_2c2e33"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/dd_btn_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/space_middle"
        app:layout_constraintTop_toTopOf="@id/dd_btn_start" />

    <Space
        android:id="@+id/space_middle"
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>