<?xml version="1.0" encoding="utf-8"?>
<com.ruffian.library.widget.RConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    app:background_normal="@color/white"
    app:corner_radius_top_left="@dimen/dp_15"
    app:corner_radius_top_right="@dimen/dp_15">


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_23"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:paddingHorizontal="@dimen/dp_50"
        android:text="@string/profile_input_text"
        android:textColor="@color/cl2C2E33"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="@dimen/dp_42"
        android:layout_height="@dimen/dp_42"
        android:padding="@dimen/dp_8"
        android:src="@drawable/ic_close_dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.ruffian.library.widget.RLinearLayout
        android:id="@+id/llEdit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_29"
        android:gravity="center_vertical"
        android:layoutDirection="locale"
        android:orientation="horizontal"
        app:background_normal="@color/clF5F6F7"
        app:corner_radius="@dimen/dp_27"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle">

        <EditText
            android:id="@+id/etDes"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="start|center_vertical"
            android:hint="@string/profile_input_text"
            android:inputType="textAutoComplete"
            android:maxLength="15"
            android:paddingStart="@dimen/dp_20"
            android:textColor="@color/cl2C2E33"
            android:textColorHint="@color/cl848A99"
            android:textSize="@dimen/sp_17" />

        <TextView
            android:id="@+id/tvDesSum"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingHorizontal="@dimen/dp_18"
            android:text="0/15"
            android:textColor="@color/cl848A99"
            android:textSize="@dimen/sp_13"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </com.ruffian.library.widget.RLinearLayout>


    <com.ruffian.library.widget.RTextView
        android:id="@+id/tvNext"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_51"
        android:layout_marginHorizontal="@dimen/dp_33"
        android:layout_marginTop="@dimen/dp_35"
        android:layout_marginBottom="@dimen/dp_20"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        app:background_normal="@color/cl2C2E33"
        app:corner_radius="@dimen/dp_26"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llEdit" />

</com.ruffian.library.widget.RConstraintLayout>