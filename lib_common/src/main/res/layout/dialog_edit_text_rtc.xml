<?xml version="1.0" encoding="utf-8"?>
<com.ruffian.library.widget.RConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:paddingVertical="@dimen/dp_8"
    app:background_normal="@color/clF5F6F7">


    <!-- 底部消息输入框 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_16">

        <com.ruffian.library.widget.RConstraintLayout
            android:id="@+id/llEdit"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="@dimen/dp_44"
            android:orientation="horizontal"
            app:background_normal="@color/white"
            app:corner_radius="@dimen/dp_22"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <com.vanniktech.emoji.EmojiEditText
                android:id="@+id/etMsg"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="@string/input_message"
                android:importantForAutofill="no"
                android:inputType="textAutoComplete"
                android:paddingStart="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_16"
                android:textColor="@color/cl2C2E33"
                android:textColorHint="@color/color999999"
                android:textSize="@dimen/sp_14"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ivSend"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_back"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivSend"
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_28"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_9"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_send"
                app:border_color="@color/white"
                app:border_width="@dimen/dp_1"
                app:corner_radius="@dimen/dp_50"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </com.ruffian.library.widget.RConstraintLayout>

        <View
            android:id="@+id/viewSpace"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.ruffian.library.widget.RConstraintLayout>