<?xml version="1.0" encoding="utf-8"?>
<com.ruffian.library.widget.RConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rootView"
    android:layout_marginHorizontal="@dimen/dp_14"
    android:layout_marginVertical="@dimen/dp_14"
    android:minHeight="@dimen/dp_95"
    app:background_normal="@color/cl282C51"
    app:corner_radius="@dimen/dp_17">

    <com.ruffian.library.widget.RImageView
        android:id="@+id/ivAvatar"
        android:layout_width="@dimen/dp_51"
        android:layout_height="@dimen/dp_51"
        android:layout_marginStart="@dimen/dp_17"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_default_avatar"
        app:border_color="@color/white"
        app:border_width="@dimen/dp_1"
        app:corner_radius="@dimen/dp_50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.dubu.common.views.tv.UbuntuMediumTextView
        app:layout_constraintEnd_toStartOf="@+id/ivPickDown"
        android:id="@+id/tvUserName"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_3"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_19"
        app:layout_constraintStart_toEndOf="@+id/ivAvatar"
        app:layout_constraintTop_toTopOf="@+id/ivAvatar"
        app:layout_constraintBottom_toBottomOf="@+id/ivAvatar"
        tools:text="11211111" />


    <ImageView
        android:visibility="gone"
        android:id="@+id/ivSex"
        android:layout_width="@dimen/dp_13"
        android:layout_height="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_12"
        android:src="@drawable/ic_default_avatar"
        app:layout_constraintStart_toStartOf="@+id/tvUserName"
        app:layout_constraintTop_toBottomOf="@+id/tvUserName" />


    <!-- 我的状态-->
    <com.dubu.common.views.tv.UbuntuRegularTextView
        android:visibility="gone"
        android:id="@+id/tvAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_4"
        android:gravity="center"
        android:lineHeight="@dimen/dp_14"
        android:text="28"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="@+id/ivSex"
        app:layout_constraintStart_toEndOf="@+id/ivSex"
        app:layout_constraintTop_toTopOf="@+id/ivSex" />


    <View
        android:visibility="gone"
        android:id="@+id/viewH"
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_8"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/tvAge"
        app:layout_constraintStart_toEndOf="@+id/tvAge"
        app:layout_constraintTop_toTopOf="@+id/tvAge" />


    <ImageView
        android:visibility="gone"
        android:id="@+id/ivCountry"
        android:layout_width="@dimen/dp_13"
        android:layout_height="@dimen/dp_13"
        android:layout_marginStart="@dimen/dp_8"
        android:src="@drawable/ic_default_avatar"
        app:layout_constraintBottom_toBottomOf="@+id/viewH"
        app:layout_constraintStart_toEndOf="@+id/viewH"
        app:layout_constraintTop_toTopOf="@+id/viewH" />

    <com.dubu.common.views.tv.UbuntuRegularTextView
        android:visibility="gone"
        android:id="@+id/tvCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_4"
        android:gravity="center"
        android:lineHeight="@dimen/dp_14"
        android:text="US"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="@+id/ivCountry"
        app:layout_constraintStart_toEndOf="@+id/ivCountry"
        app:layout_constraintTop_toTopOf="@+id/ivCountry" />


    <ImageView
        android:id="@+id/ivPickUp"
        android:layout_width="@dimen/dp_38"
        android:layout_height="@dimen/dp_38"
        android:layout_marginEnd="@dimen/dp_20"
        android:src="@drawable/ic_pick_up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivPickDown"
        android:layout_width="@dimen/dp_38"
        android:layout_height="@dimen/dp_38"
        android:layout_marginEnd="@dimen/dp_22"
        android:src="@drawable/ic_pick_down"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ivPickUp"
        app:layout_constraintTop_toTopOf="parent" />

</com.ruffian.library.widget.RConstraintLayout>