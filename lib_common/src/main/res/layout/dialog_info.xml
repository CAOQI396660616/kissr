<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <com.dubu.common.views.cview.DrawableTextView
        android:id="@+id/dd_tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="@color/color222222"
        android:textSize="@dimen/sp_17"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:mediumWeight="true"
        tools:text="NIUBILITY_" />
    
    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_14"
        android:visibility="gone"
        android:src="@drawable/ic_app_logo"/>

    <TextView
        android:id="@+id/dd_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_20"
        android:includeFontPadding="false"
        android:textColor="@color/cl45464D"
        android:textSize="@dimen/sp_14"
        android:maxHeight="700dp"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dd_tv_title"
        tools:text="niubility_niubility_niubility_niubility_niubility_niubility_" />


    <com.dubu.common.views.cview.DrawableTextView
        android:id="@+id/dd_btn_end"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginBottom="@dimen/dp_22"
        android:background="@color/red"
        android:gravity="center"
        android:minWidth="@dimen/dp_108"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dd_tv_content" />


</androidx.constraintlayout.widget.ConstraintLayout>