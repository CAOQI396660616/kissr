<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_solid_r15_white"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <com.dubu.common.views.cview.DrawableTextView
        android:id="@+id/dd_tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginEnd="@dimen/dp_20"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="@color/cl2C2E33"
        android:textSize="@dimen/sp_15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:mediumWeight="true"
        tools:text="NIUBILITY_" />

    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="@dimen/dp_26"
        android:layout_height="@dimen/dp_26"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        android:src="@drawable/ic_close_dialog"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dd_tv_content_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:includeFontPadding="false"
        android:maxHeight="700dp"
        android:scrollbars="vertical"
        android:textColor="#42454D"
        android:textSize="@dimen/sp_13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dd_tv_title"
        tools:text="niubility_niubility_niubility_niubility_niubility_niubility_" />

    <TextView
        android:id="@+id/dd_tv_content_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_9"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:includeFontPadding="false"
        android:maxHeight="700dp"
        android:scrollbars="vertical"
        android:textColor="#42454D"
        android:textSize="@dimen/sp_13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dd_tv_content_1"
        tools:text="niubility_niubility_niubility_niubility_niubility_niubility_" />

    <TextView
        android:id="@+id/dd_tv_content_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_9"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:includeFontPadding="false"
        android:maxHeight="700dp"
        android:scrollbars="vertical"
        android:textColor="#42454D"
        android:textSize="@dimen/sp_13"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dd_tv_content_2"
        tools:text="niubility_niubility_niubility_niubility_niubility_niubility_" />


    <com.dubu.common.views.cview.DrawableTextView
        android:id="@+id/dd_btn_end"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginBottom="@dimen/dp_22"
        android:background="@color/red"
        android:gravity="center"
        android:minWidth="@dimen/dp_108"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dd_tv_content" />


</androidx.constraintlayout.widget.ConstraintLayout>