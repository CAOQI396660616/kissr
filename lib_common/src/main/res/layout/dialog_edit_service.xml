<?xml version="1.0" encoding="utf-8"?>
<com.ruffian.library.widget.RConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    app:background_normal="@color/clF3F4F5"
    app:corner_radius_top_left="@dimen/dp_15"
    app:corner_radius_top_right="@dimen/dp_15">


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_23"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:paddingHorizontal="@dimen/dp_50"
        android:text="@string/add_service"
        android:textColor="@color/cl2C2E33"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="@dimen/dp_42"
        android:layout_height="@dimen/dp_42"
        android:padding="@dimen/dp_8"
        android:src="@drawable/ic_close_dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_18"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle">


        <TextView
            android:id="@+id/tvTitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/add_service"
            android:textColor="@color/cl2C2E33"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />


        <com.ruffian.library.widget.RLinearLayout
            android:id="@+id/llEdit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:layout_marginHorizontal="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:gravity="center_vertical"
            android:layoutDirection="locale"
            android:orientation="horizontal"
            app:background_normal="@color/white"
            app:corner_radius="@dimen/dp_10">

            <EditText
                android:id="@+id/etDes"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="start|center_vertical"
                android:hint="@string/plz_enter_name"
                android:inputType="textAutoComplete"
                android:maxLength="50"
                android:paddingStart="@dimen/dp_20"
                android:textColor="@color/cl2C2E33"
                android:textColorHint="@color/cl848A99"
                android:textSize="@dimen/sp_17" />

            <TextView
                android:id="@+id/tvDesSum"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingHorizontal="@dimen/dp_18"
                android:text="0/50"
                android:textColor="@color/cl848A99"
                android:textSize="@dimen/sp_13"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </com.ruffian.library.widget.RLinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:orientation="horizontal">

            <com.ruffian.library.widget.RTextView
                android:id="@+id/tvSerOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minWidth="@dimen/dp_50"
                android:paddingHorizontal="@dimen/dp_14"
                android:paddingVertical="@dimen/dp_10"
                android:text="@string/sing_song"
                android:textColor="@color/cl585C66"
                android:textSize="@dimen/sp_12"
                app:border_color_normal="@color/cl848A99"
                app:border_width_normal="@dimen/dp_0_5f"
                app:corner_radius="@dimen/dp_18"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.ruffian.library.widget.RTextView
                android:id="@+id/tvSerTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:gravity="center"
                android:minWidth="@dimen/dp_50"
                android:paddingHorizontal="@dimen/dp_14"
                android:paddingVertical="@dimen/dp_10"
                android:text="@string/dance_dance"
                android:textColor="@color/cl585C66"
                android:textSize="@dimen/sp_12"
                app:border_color_normal="@color/cl848A99"
                app:border_width_normal="@dimen/dp_0_5f"
                app:corner_radius="@dimen/dp_18"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_32"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/service_price_gold"
            android:textColor="@color/cl2C2E33"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />


        <com.ruffian.library.widget.RLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:layout_marginHorizontal="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:gravity="center_vertical"
            android:layoutDirection="locale"
            android:orientation="horizontal"
            app:background_normal="@color/white"
            app:corner_radius="@dimen/dp_10">

            <EditText
                android:id="@+id/etDesSum"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="start|center_vertical"
                android:hint="@string/plz_enter_service_price"
                android:inputType="number"
                android:maxLength="3"
                android:paddingHorizontal="@dimen/dp_20"
                android:textColor="@color/cl2C2E33"
                android:textColorHint="@color/cl848A99"
                android:textSize="@dimen/sp_17" />


        </com.ruffian.library.widget.RLinearLayout>


        <com.ruffian.library.widget.RTextView
            android:id="@+id/tvNext"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_51"
            android:layout_marginHorizontal="@dimen/dp_33"
            android:layout_marginTop="@dimen/dp_35"
            android:layout_marginBottom="@dimen/dp_20"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            app:background_normal="@color/cl2C2E33"
            app:corner_radius="@dimen/dp_26" />


    </LinearLayout>

</com.ruffian.library.widget.RConstraintLayout>