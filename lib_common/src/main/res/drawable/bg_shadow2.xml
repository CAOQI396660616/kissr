<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 阴影层（偏移+模糊） -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#10000000" /> <!-- 半透明黑色 -->
            <corners android:radius="2dp" />   <!-- 圆角（可选） -->
        </shape>
    </item>

    <!-- 原始图片层（向右下角偏移） -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp">
        <bitmap android:src="@drawable/ic_back_a" /> <!-- 替换为你的图片 -->
    </item>
</layer-list>