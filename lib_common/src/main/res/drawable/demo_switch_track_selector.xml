<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape>
        <size android:width="50dp" android:height="24dp"/>
        <corners android:radius="12dp"/>
            <gradient
                android:angle="180"
                android:endColor="#FFF50062"
                android:startColor="#FFFF8025" />
        </shape>
    </item>



    <item>
        <shape android:shape="rectangle">
            <size android:width="50dp" android:height="24dp"/>
            <solid android:color="#ff363638"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>

</selector>