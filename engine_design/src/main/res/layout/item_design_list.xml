<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dp_15"
    android:layout_marginVertical="@dimen/dp_10">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivAvatar"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        android:layout_marginVertical="@dimen/dp_5"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_default_avatar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/circleImageStyle" />

    <com.ruffian.library.widget.RFrameLayout
        android:id="@+id/flDot"
        android:layout_width="@dimen/dp_11"
        android:layout_height="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_3"
        app:background_normal="@color/cl3CD504"
        app:border_color_normal="@color/white"
        app:border_width_normal="@dimen/dp_1"
        app:corner_radius="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="@+id/ivAvatar"
        app:layout_constraintEnd_toEndOf="@+id/ivAvatar" />

    <com.dubu.common.views.tv.UbuntuMediumTextView
        android:id="@+id/tvName"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_3"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:text="@string/app_name"
        android:textColor="@color/cl272B33"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toTopOf="@+id/tvTip"
        app:layout_constraintEnd_toStartOf="@+id/clHi"
        app:layout_constraintStart_toEndOf="@+id/ivAvatar"
        app:layout_constraintTop_toTopOf="parent" />

    <com.dubu.common.views.tv.UbuntuRegularTextView
        android:id="@+id/tvTip"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_12"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:text="@string/app_name"
        android:textColor="@color/cl6F7480"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/clHi"
        app:layout_constraintStart_toStartOf="@+id/tvName"
        app:layout_constraintTop_toBottomOf="@+id/tvName" />

    <com.ruffian.library.widget.RConstraintLayout
        android:id="@+id/clHi"
        android:layout_width="@dimen/dp_58"
        android:layout_height="@dimen/dp_0"
        android:layout_marginTop="@dimen/dp_11"
        app:background_normal="@color/clF3F4F5"
        app:corner_radius="@dimen/dp_18"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="h,58:34"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivHi"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:src="@drawable/ic_hi2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </com.ruffian.library.widget.RConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>



