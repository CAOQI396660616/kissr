<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.HiReal">
        <item name="windowNoTitle">true</item>
        <!--设置全局字体 苹方-简 暂时没有用-->
        <!--<item name="android:fontFamily" tool:targetApi="l">@font/din_medium</item>-->
    </style>

    <!-- 登录弹框主题样式 -->
    <style name="LoginDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- 背景透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item> <!-- 背景蒙层透明度 -->

        <!-- 从底部弹出 -->
        <item name="android:windowAnimationStyle">@style/BottomDialogAnimation</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!-- 底部弹出动画样式 -->
    <style name="BottomDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

</resources>