<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.HiReal">
        <item name="windowNoTitle">true</item>
        <!--设置全局字体 苹方-简 暂时没有用-->
        <!--<item name="android:fontFamily" tool:targetApi="l">@font/din_medium</item>-->
    </style>

    <!-- 登录弹框主题样式 -->
    <style name="LoginDialogTheme" parent="AppTheme">
        <!-- 无标题栏 -->
        <item name="windowNoTitle">true</item>
        <!-- 透明背景 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 非浮动窗口，全屏显示 -->
        <item name="android:windowIsFloating">false</item>
        <!-- 半透明遮罩 -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 从底部弹出动画 -->
        <item name="android:windowAnimationStyle">@style/BottomDialogAnimation</item>
        <!-- 允许点击外部关闭 -->
        <item name="android:windowCloseOnTouchOutside">true</item>
        <!-- 全屏显示 -->
        <item name="android:windowFullscreen">false</item>
        <!-- 状态栏透明 -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- 导航栏透明 -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- 窗口布局在系统栏后面 -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!-- 窗口半透明状态栏 -->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- 底部弹出动画样式 -->
    <style name="BottomDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

</resources>